/**
 * Implements hook_theme_registry_alter().
 *
 * Let Drupal know that we've got bean--faculty_publications.tpl.php in our module
 * directory.
 */
function cu_faculty_publications_bundle_theme_registry_alter(&$theme_registry) {
  $module_path = drupal_get_path('module', 'cu_faculty_publications_bundle');
  $theme_registry_copy = $theme_registry;
  _theme_process_registry($theme_registry_copy, 'phptemplate', 'theme_engine', 'bean', $module_path);
  $theme_registry += array_diff_key($theme_registry_copy, $theme_registry);
  $hooks = array('bean');
  foreach ($hooks as $h) {
    if (isset($theme_registry[$h]['theme paths'])) {
      $first_element = array_shift($theme_registry[$h]['theme paths']);
      array_unshift($theme_registry[$h]['theme paths'], array_shift($theme_registry[$h]['theme paths']), $module_path);
    }
  }
}

/**
  * Implements hook_theme().
  */
function cu_faculty_publications_bundle_theme(&$existing, $type, $theme, $path) {
  $registry = array();
  $template_dir = drupal_get_path('module', 'cu_faculty_publications_bundle') . '/templates';
  $registry['faculty_publication'] = array(
    'template' => 'faculty-publication',
    'path' => $template_dir,
  );
  return $registry;
}

function cu_faculty_publications_bundle_preprocess_entity(&$vars) {
  $entity_type = $vars['elements']['#entity_type'];
  $bundle = $vars['elements']['#bundle'];
  if ($vars['elements']['#bundle'] == 'faculty_publications') {
    $endpoint = variable_get('cu_faculty_publications_endpoint', 'https://experts.colorado.edu/es/fispubs-v1/_search');

    // Get the block's field data and create search query.
    // Update endpoint url with elasticsearch query.
    $endpoint = create_elasticsearch_query($vars['bean'], $endpoint);

    // $endpoint = url($endpoint, ['query' => $searchQuery]);
    $items = array();
    $response = drupal_http_request($endpoint);
    if ($response->code == '200') {
      $result = drupal_json_decode($response->data, true);
      $total = $result['hits']['total'];
      $pages = ceil($total/10);
      $items = $result['hits']['hits'];
    }
    if (!empty($items)) {
      $publications = array();
      foreach ($items as $item) {
        $publication = $item['_source'];
        $publications[]['#markup'] = theme('faculty_publication', $publication);
      }
    }
    if (!empty($publications)) {
      $vars['content']['publications'] = $publications;
    }
    else {
      $vars['content']['no_results']['#markup'] = 'There are no results for your query.';
    }
  }
}

function cu_faculty_publications_results() {
  return array('25' => '25', '50' => '50', '100' => '100', 'all' => 'ALL');
}

/**
 * Returns an array that may be passed into url()'s options['query'] property.
 */
function create_elasticsearch_query($beanObject, $urlBase) {
  $queryArr = [];

  if(!empty($beanObject->field_faculty_publication_date)) {
    $date1 = strtotime($beanObject->field_faculty_publication_date[LANGUAGE_NONE][0]['value']);
    $date2 = strtotime($beanObject->field_faculty_publication_date[LANGUAGE_NONE][0]['value2']);

    $date1 = date('Y-m-d', $date1);
    $date2 = date('Y-m-d', $date2);
    $queryArr['q'][] = 'publicationDate:[' . $date1 . ' TO ' . $date2 . ']';
  }

  // The q property must be a string in order for elasticsearch to work properly.
  if (count($queryArr['q'] > 1)) {
    $queryArr['q'] = implode(' AND ', $queryArr['q']);
  }
  elseif (count($queryArr['q'] === 1)) {
    $queryArr['q'] = $queryArr['q'][0];
  }

  // Other field checks will need to go above this.
  // This will need to go last so that we can check the total search results if faculty_pub_results is set to 'ALL'.
  if (!empty($beanObject->field_faculty_pub_results)) {

    if ($beanObject->field_faculty_pub_results[LANGUAGE_NONE][0]['value'] === 'all') {
      $queryArr['size'] = 0;
      $testEnpoint = url($urlBase, ['query'=> $queryArr]);
      $response = drupal_http_request($testEnpoint);

      if ($response->code === '200') {
        $parsedResponse = drupal_json_decode($response->data, true);
        // The highest allowed size is 10000.
        // If we want a higher size we need to change this setting in the database.
        // As it is 10,000 search results often cause an issue as it takes too long to load.
        $totalPublications = $parsedResponse['hits']['total'] > 10000 ? 10000 : $parsedResponse['hits']['total'];
        $queryArr['size'] = $totalPublications;
      }
    }
    else {
      $queryArr['size'] = $beanObject->field_faculty_pub_results[LANGUAGE_NONE][0]['value'];
    }
  }

  return url($urlBase, [query => $queryArr]);
}

